<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_mini"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/vertical_padding_very_very_small">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/news_mini_image_height"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_url"
                android:layout_width="@dimen/news_mini_image_width"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/TitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:padding="@dimen/vertical_padding_very_small"
                    android:textColor="@color/news_headline_mini"
                    android:text="This is my news article\nplease help :P"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/gray3"
                    android:padding="@dimen/vertical_padding_very_very_small"
                    android:layout_alignParentBottom="true"
                    >

                    <ImageView
                        android:id="@+id/fab_icon"
                        android:layout_width="@dimen/news_fav_icon_small_width"
                        android:layout_height="@dimen/news_fav_icon_height"
                        android:scaleType="centerInside"
                        android:layout_gravity="center"
                        android:paddingRight="@dimen/vertical_padding_very_small"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="@color/gray1" />

                    <TextView
                        android:id="@+id/published"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/news_data"
                        android:text="published"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/vertical_padding_very_small"
                         />

                    <TextView
                        android:id="@+id/type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_gravity="center"
                        android:paddingRight="@dimen/vertical_padding_very_small"
                        android:textAllCaps="true"
                        android:text="CRICKET"
                        android:textColor="@color/app_theme_blue"
                        android:textSize="10sp" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>