<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/horizontal_padding_small"
        android:layout_margin="@dimen/activity_vertical_margin"
        card:cardCornerRadius="@dimen/card_edge_curve_radius">
        <LinearLayout
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:weightSum="5"
            android:padding="@dimen/horizontal_padding_small"
            android:orientation="horizontal">
               <ImageView
                   android:id="@+id/tv_player_number_or_replace"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_weight="1"
                   android:src="@drawable/ic_distance_slider_01"/>
               <TextView
                   android:id="@+id/tv_player_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:textSize="@dimen/font_size_small_medium"
                   android:text="tem"/>
               <ImageView
                   android:id="@+id/iv_card_type"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_weight="1"
                   android:src="@drawable/ic_yellow_card"/>
               <ImageView
                   android:id="@+id/iv_ball_pass"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_weight="1"
                   android:src="@drawable/ic_football"/>
               <ImageView
                   android:id="@+id/iv_enter_exit"
                   android:layout_weight="1"
                   android:layout_width="wrap_content"
                   android:gravity="center"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_red_arrow"
                  />
        </LinearLayout>
    </android.support.v7.widget.CardView>

