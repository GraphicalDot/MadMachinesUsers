<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sports.unity.common.controller.EnterOtpActivity"
    android:id="@+id/rootview"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/splash_bg"
        android:scaleType="centerCrop"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/horizontal_padding_small"
        android:paddingRight="@dimen/horizontal_padding_small"
        android:paddingTop="@dimen/vertical_padding_small"
        android:paddingBottom="@dimen/vertical_padding_small">

        <RelativeLayout
            android:id="@+id/editContent"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/edit_view_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/number_bg"
            android:orientation="vertical">

            <EditText
                android:id="@+id/enterOtp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/number_bg"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="4"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/font_size_medium"
                />

            <Button
                android:id="@+id/sendOtpButton"
                android:layout_width="@dimen/edit_view_height"
                android:layout_height="@dimen/edit_view_height"
                android:layout_alignParentRight="true"
                android:background="@drawable/next" />

        </RelativeLayout>

        <TextView
            android:id="@+id/enterotpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/editContent"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/vertical_padding_very_small"
            android:layout_marginLeft="@dimen/horizontal_padding_medium"
            android:layout_marginRight="@dimen/horizontal_padding_medium"
            android:gravity="center"
            android:text="@string/otp_message_verification"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_medium" />

        <Button
            android:id="@+id/resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editContent"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:text="@string/btn_resend"
            android:textColor="@color/ColorPrimary"
            android:textSize="@dimen/font_size_small_large"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/enterotpText"
            android:layout_below="@+id/editNumberLayout"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_ph_no_logo" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/editNumberLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/horizontal_padding_very_small"
            android:paddingRight="@dimen/horizontal_padding_very_small"
            android:paddingTop="@dimen/vertical_padding_very_small"
            android:paddingBottom="@dimen/vertical_padding_very_small"
            android:clickable="true"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/horizontal_padding_small"
                android:src="@drawable/ic_signup_bk" />

            <TextView
                android:id="@+id/editNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_phone_number"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_small_large"
                />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.Holo.Light.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    </RelativeLayout>

</FrameLayout>