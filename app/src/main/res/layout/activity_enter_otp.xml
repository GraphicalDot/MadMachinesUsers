<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sports.unity.common.controller.EnterOtpActivity"
    android:background="@drawable/splash_720">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/splash_logo"
        android:layout_marginTop="76dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterotpText"
        android:layout_below="@+id/imageView"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:id="@+id/enterOtp"
        android:layout_below="@+id/enterotpText"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:gravity="center"
        android:padding="10dp"
        android:inputType="number"
        android:background="@drawable/number_bg"
        android:maxLines="1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_resend"
        android:textColor="@color/app_theme_blue"
        android:background="@android:color/transparent"
        android:id="@+id/resend"
        android:layout_below="@+id/enterOtp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="40dp"
        android:layout_height="43dp"
        android:background="@drawable/next"
        android:id="@+id/sendOtpButton"
        android:layout_alignTop="@+id/enterOtp"
        android:layout_alignEnd="@+id/enterOtp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_phone_number"
        android:id="@+id/editnumber"
        android:textColor="@android:color/white"
        style="?android:attr/buttonBarButtonStyle"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
