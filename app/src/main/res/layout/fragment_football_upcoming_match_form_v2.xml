<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/ColorPrimary">
    <include
        android:id="@+id/error"
        layout="@layout/error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        />

    <ScrollView
        android:layout_below="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:id="@+id/root_layout"
            android:visibility="gone">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/layout_team_first"
                    android:layout_width="match_parent"
                    android:padding="@dimen/horizontal_padding_very_small"
                    android:layout_height="wrap_content"
                    android:background="@color/gray3"
                    android:orientation="horizontal">
                    <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                        android:id="@+id/tv_name_first_team"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/font_size_small_large"
                        android:textAllCaps="true"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_last_match"
                    android:layout_below="@+id/layout_team_first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.sports.unity.common.view.CustomRobotoCondenseRegularTextView
                        android:id="@+id/tv_last_five_match_team_first"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginTop="@dimen/activity_vertical_margin_small"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:textColor="@color/score_light_grey"
                        android:textSize="@dimen/font_size_very_small"
                        android:text="LAST 5 MATCH"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_last_five_match_value"
                    android:layout_below="@+id/layout_last_match"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"

                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_first_match_team_first"
                            android:layout_marginTop="@dimen/activity_vertical_margin_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:src="@drawable/recent_balls"
                            android:layout_marginLeft="@dimen/activity_vertical_margin_large" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_second_match_team_first"
                            android:layout_marginTop="@dimen/activity_vertical_margin_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:src="@drawable/recent_balls"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_third_match_team_first"
                            android:layout_marginTop="@dimen/activity_vertical_margin_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:src="@drawable/recent_balls"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_forth_match_team_first"
                            android:layout_marginTop="@dimen/activity_vertical_margin_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:src="@drawable/recent_balls"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_fifth_match_team_first"
                            android:layout_marginTop="@dimen/activity_vertical_margin_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:src="@drawable/recent_balls"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"/>
                    </FrameLayout>
                </LinearLayout>
                <View
                    android:id="@+id/first_view"
                    android:layout_marginTop="@dimen/activity_vertical_margin_small"
                    android:layout_below="@+id/layout_last_five_match_value"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray3" />
                <LinearLayout
                    android:layout_below="@+id/layout_last_five_match_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.sports.unity.common.view.CustomRobotoCondenseRegularTextView
                        android:id="@+id/tv_first_premiera_division"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingTop="@dimen/horizontal_padding_small"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:textColor="@color/score_light_grey"
                        android:textSize="@dimen/font_size_very_small"
                        android:text="@string/premiera_division"/>
                </LinearLayout>
                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/layout_team_history_value"
                    android:paddingTop="@dimen/horizontal_padding_large"
                    android:layout_below="@+id/layout_last_five_match_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ll_first_point"
                        android:layout_width="wrap_content"
                        app:layout_widthPercent="25%"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                            android:id="@+id/tv_point_of_first_team"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/green"
                            android:textSize="@dimen/font_size_small_large"
                            android:text=""/>
                        <com.sports.unity.common.view.CustomRobotoCondenseRegularTextView
                            android:id="@+id/tv_first_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/score_light_grey"
                            android:textSize="@dimen/font_size_very_small"
                            android:text="@string/point"/>
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_toRightOf="@id/ll_first_point"
                        android:id="@+id/ll_first_wins"
                        app:layout_widthPercent="25%"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                            android:id="@+id/tv_win_match_of_first_team"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/font_size_small_large"
                            android:text=""/>
                        <com.sports.unity.common.view.CustomRobotoCondenseRegularTextView
                            android:id="@+id/tv_first_wins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/score_light_grey"
                            android:textSize="@dimen/font_size_very_small"
                            android:text="@string/win"/>
                    </LinearLayout>
                    <LinearLayout
                        app:layout_widthPercent="25%"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/ll_first_wins"
                        android:id="@+id/ll_first_draws"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                            android:id="@+id/tv_draw_match_of_first_team"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/font_size_small_large"
                            android:text=""/>
                        <com.sports.unity.common.view.CustomRobotoCondenseRegularTextView
                            android:id="@+id/tv_first_draws"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/score_light_grey"
                            android:textSize="@dimen/font_size_very_small"
                            android:text="@string/draws"/>
                    </LinearLayout>
                    <LinearLayout
                        app:layout_widthPercent="25%"
                        android:id="@+id/ll_first_loss"
                        android:layout_toRightOf="@id/ll_first_draws"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                            android:id="@+id/tv_loss_match_of_first_team"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/font_size_small_large"
                            android:text=""/>
                        <com.sports.unity.common.view.CustomRobotoCondenseRegularTextView
                            android:id="@+id/tv_first_loss"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/score_light_grey"
                            android:textSize="@dimen/font_size_very_small"
                            android:text="@string/loss"/>
                    </LinearLayout>


                </android.support.percent.PercentRelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:paddingTop="@dimen/horizontal_padding_very_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/layout_team_second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/horizontal_padding_very_small"
                    android:background="@color/gray3"
                    android:orientation="horizontal">
                    <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                        android:id="@+id/tv_name_second_team"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/dark_blue"
                        android:textAllCaps="true"
                        android:textSize="@dimen/font_size_small_large"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_last_match_second_team"
                    android:layout_below="@+id/layout_team_second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.sports.unity.common.view.CustomRobotoCondenseRegularTextView
                        android:id="@+id/tv_last_five_match_team_second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginTop="@dimen/activity_vertical_margin_small"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:textColor="@color/score_light_grey"
                        android:textSize="@dimen/font_size_very_small"
                        android:text="LAST 5 MATCH"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_last_five_match_value_second_team"
                    android:layout_below="@+id/layout_last_match_second_team"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/tv_first_match_team_second"
                            android:layout_marginTop="@dimen/activity_vertical_margin_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:src="@drawable/recent_balls"
                            android:layout_marginLeft="@dimen/activity_vertical_margin_large"
                            />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/tv_second_match_team_second"
                            android:layout_marginTop="@dimen/activity_vertical_margin_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:src="@drawable/recent_balls"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/tv_third_match_team_second"
                            android:layout_marginTop="@dimen/activity_vertical_margin_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:src="@drawable/recent_balls"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"
                            />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/tv_forth_match_team_second"
                            android:layout_marginTop="@dimen/activity_vertical_margin_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:src="@drawable/recent_balls"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/tv_fifth_match_team_second"
                            android:layout_marginTop="@dimen/activity_vertical_margin_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:src="@drawable/recent_balls"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"/>
                    </FrameLayout>
                </LinearLayout>

                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/layout_team_history_value_second_team"
                    android:paddingTop="@dimen/horizontal_padding_large"
                    android:layout_below="@+id/layout_last_five_match_value_second_team"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ll_second_point"
                        android:layout_width="wrap_content"
                        app:layout_widthPercent="25%"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                            android:id="@+id/tv_point_of_second_team"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/green"
                            android:textSize="@dimen/font_size_small_large"
                            android:text=""/>
                        <com.sports.unity.common.view.CustomRobotoCondenseRegularTextView
                            android:id="@+id/tv_second_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/font_size_very_small"
                            android:textColor="@color/score_light_grey"
                            android:text="@string/point"/>
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_toRightOf="@id/ll_second_point"
                        android:id="@+id/ll_second_wins"
                        app:layout_widthPercent="25%"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                            android:id="@+id/tv_win_match_of_second_team"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/font_size_small_large"
                            android:text=""/>
                        <com.sports.unity.common.view.CustomRobotoCondenseRegularTextView
                            android:id="@+id/tv_second_wins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/score_light_grey"
                            android:textSize="@dimen/font_size_very_small"
                            android:text="@string/win"/>
                    </LinearLayout>
                    <LinearLayout
                        app:layout_widthPercent="25%"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/ll_second_wins"
                        android:id="@+id/ll_second_draws"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                            android:id="@+id/tv_draw_match_of_second_team"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/font_size_small_large"
                            android:text=""/>
                        <com.sports.unity.common.view.CustomRobotoCondenseRegularTextView
                            android:id="@+id/tv_second_draws"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/score_light_grey"
                            android:textSize="@dimen/font_size_very_small"
                            android:text="@string/draws"/>
                    </LinearLayout>
                    <LinearLayout
                        app:layout_widthPercent="25%"
                        android:id="@+id/ll_second_loss"
                        android:layout_toRightOf="@id/ll_second_draws"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                            android:id="@+id/tv_loss_match_of_second_team"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/font_size_small_large"
                            android:text=""/>

                        <com.sports.unity.common.view.CustomRobotoCondenseRegularTextView
                            android:id="@+id/tv_second_loss"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/score_light_grey"
                            android:textSize="@dimen/font_size_very_small"
                            android:text="@string/loss"/>
                    </LinearLayout>
                </android.support.percent.PercentRelativeLayout>
                <View
                    android:id="@+id/second_view"
                    android:layout_marginTop="@dimen/activity_vertical_margin_small"
                    android:layout_below="@+id/layout_last_five_match_value_second_team"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray3" />
                <LinearLayout
                    android:layout_below="@+id/layout_last_five_match_value_second_team"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.sports.unity.common.view.CustomRobotoCondenseRegularTextView
                        android:id="@+id/tv_second_premiera_division"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingTop="@dimen/horizontal_padding_small"
                        android:layout_marginLeft="@dimen/activity_vertical_margin"
                        android:textColor="@color/score_light_grey"
                        android:textSize="@dimen/font_size_very_small"
                        android:text="@string/premiera_division"/>


                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
