<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/layout_batting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorPrimary"
        android:padding="@dimen/horizontal_padding_small"
        android:weightSum="3">
        <com.sports.unity.common.view.CustomRobotoRegularTextView
            android:id="@+id/tv_wicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1-5"
            android:textSize="@dimen/font_size_small_large" />
        <com.sports.unity.common.view.CustomRobotoRegularTextView
            android:id="@+id/tv_bowler_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dev"
            android:textSize="@dimen/font_size_small_large" />
        <com.sports.unity.common.view.CustomRobotoRegularTextView
            android:id="@+id/tv_over_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="42"
            android:textSize="@dimen/font_size_small_large" />
    </LinearLayout>
</android.support.v7.widget.CardView>
