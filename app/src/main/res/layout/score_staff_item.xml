<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/score_staff_image"
    android:layout_width="match_parent"
    android:layout_height="@dimen/profile_thumb_image_xlarge"
    android:layout_margin="@dimen/horizontal_padding_very_very_small"
    android:background="@color/gray3"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/flag"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_thumb_image_xlarge"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/invite_button_height"
        android:layout_height="@dimen/invite_button_height"
        android:layout_gravity="right"
        android:paddingBottom="@dimen/vertical_padding_very_small"
        android:paddingLeft="@dimen/horizontal_padding_very_small"
        android:src="@drawable/ic_close_white" />
</FrameLayout>