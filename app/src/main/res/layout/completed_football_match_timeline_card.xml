<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:background="@color/ColorPrimary"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/ColorPrimary"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:paddingRight="@dimen/vertical_padding_very_very_small"
            android:paddingLeft="@dimen/vertical_padding_very_very_small"
            android:orientation="vertical">

            <RelativeLayout
                android:background="@color/gray3"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <View
                    android:id="@+id/v_dummy"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerInParent="true">
                </View>
                <ImageView
                    android:id="@+id/iv_center_status"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_distance_slider_01"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/iv_team_first_minutes"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"

                />
            <TextView
                android:id="@+id/iv_team_first_status"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"

                />
            <TextView
                android:id="@+id/iv_team_second_status"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
               />
            <TextView
                android:id="@+id/iv_team_second_minutes"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/iv_team_second_status"
                android:layout_centerInParent="true"

                />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>