<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ColorPrimary"
    android:focusableInTouchMode="true"
    tools:context="com.sports.unity.scoredetails.cricketdetail.PlayerCricketBioDataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorPrimary"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/activity_vertical_margin_small"
            android:background="@color/gray3"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/vertical_padding_small"
                android:textSize="@dimen/font_size_small_large"
                android:layout_gravity="left"
                android:text="@string/batting_performance_analisis"/>
            <ImageView
                android:id="@+id/iv_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:src="@drawable/ic_droable"/>
        </RelativeLayout>
        <GridLayout
            android:id="@+id/gl_batting_performance_summery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:numColumns="auto_fit"
            android:verticalSpacing="8dp"
            android:horizontalSpacing="4dp">
        </GridLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorPrimary"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/activity_vertical_margin_small"
            android:background="@color/gray3"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/vertical_padding_small"
                android:textSize="@dimen/font_size_small_large"
                android:layout_gravity="left"
                android:text="@string/blowing_performance_analisis"/>
            <ImageView
                android:id="@+id/iv_down_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:src="@drawable/ic_droable"/>
        </RelativeLayout>
        <GridLayout
            android:id="@+id/gl_bowling_performance_summery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:numColumns="auto_fit"
            android:verticalSpacing="8dp"
            android:horizontalSpacing="4dp">
        </GridLayout>

    </LinearLayout>
    <include layout="@layout/error_layout"
        android:id="@+id/error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>
