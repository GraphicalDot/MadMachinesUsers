<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="layout.Timeline">




        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/timeline_rht"
            android:orientation="horizontal"
            android:paddingRight="@dimen/horizontal_padding_large"
            android:layout_marginLeft="@dimen/activity_vertical_margin_small">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/gray4">
                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="@dimen/horizontal_padding_very_small"
                    android:text="59'"
                    android:paddingLeft="@dimen/horizontal_padding_very_small"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_size_medium"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/ColorPrimary"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="ON:"
                        android:textSize="@dimen/font_size_small_medium"
                        android:textColor="@android:color/background_dark" />

                    <TextView
                        android:id="@+id/textview5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/font_size_small_medium"
                        android:text="Rudy" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/font_size_small_medium"
                        android:text="OFF:"
                        />

                    <TextView
                        android:id="@+id/textview7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="@dimen/font_size_small_medium"
                        android:text="Scott" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>





        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/timeline_lft"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/ColorPrimary"
                android:paddingRight="@dimen/horizontal_padding_medium"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="ON:"
                        android:textSize="@dimen/font_size_small_medium" />

                    <TextView
                        android:id="@+id/textview10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/font_size_small_medium"
                        android:text="Carlot" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="OFF:"
                        android:textSize="@dimen/font_size_small_medium"
                        />

                    <TextView
                        android:id="@+id/textview12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jordan"
                        android:textSize="@dimen/font_size_small_medium"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/gray4">

                <TextView
                    android:id="@+id/textview8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="@dimen/horizontal_padding_very_small"
                    android:text="68'"
                    android:paddingLeft="@dimen/horizontal_padding_very_small"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/font_size_medium"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                app:civ_border_color="@color/gray1"
                app:civ_border_width="1dp"
                android:padding="8dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_red_green_arrow"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />



       <View
           android:layout_width="1dp"
           android:layout_height="11dp"
           android:background="@color/gray4"
           android:layout_centerHorizontal="true" />
    <View
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:background="@color/gray4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"/>
    </RelativeLayout>

