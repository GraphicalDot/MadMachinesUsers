<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:minHeight="?android:attr/actionBarSize"
    android:theme="@style/AppHomeTheme"
    android:popupTheme="@style/PopupMenuListView">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/backarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="-16dp"
            android:layout_marginRight="-8dp"
            style="?android:attr/buttonBarButtonStyle"
            android:src="@drawable/ic_menu_back_blk" />

        <ImageView
            android:id="@+id/user_picture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:src="@drawable/stark" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chat_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="chat"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/status_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active 1 min ago"
                android:textColor="@color/active_chatScreen"
                android:textSize="10dp" />
        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.Toolbar>