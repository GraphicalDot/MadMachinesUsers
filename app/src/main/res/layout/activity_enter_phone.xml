<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sports.unity.common.controller.EnterPhoneActivity"
    android:id="@+id/rootview"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/splash_bg" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/horizontal_padding_small"
        android:paddingRight="@dimen/horizontal_padding_small"
        android:paddingTop="@dimen/vertical_padding_small"
        android:paddingBottom="@dimen/vertical_padding_small">

        <RelativeLayout
            android:id="@+id/editContent"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/edit_view_height"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/number_bg">

            <EditText
                android:id="@+id/countryCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@android:color/transparent"
                android:editable="false"
                android:paddingLeft="@dimen/horizontal_padding_very_small"
                android:paddingRight="@dimen/horizontal_padding_very_small"
                android:text="@string/country_code"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_medium"
                />

            <View
                android:id="@+id/seperator"
                android:layout_toRightOf="@+id/countryCode"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/ColorPrimaryDark"/>

            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/getOtp"
                android:layout_toRightOf="@+id/seperator"
                android:background="@android:color/transparent"
                android:maxLength="17"
                android:inputType="number"
                android:paddingLeft="@dimen/horizontal_padding_very_small"
                android:paddingRight="@dimen/horizontal_padding_very_small"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_medium"
                android:textCursorDrawable="@null" />

            <Button
                android:id="@+id/getOtp"
                android:layout_width="@dimen/edit_view_height"
                android:layout_height="@dimen/edit_view_height"
                android:layout_alignParentRight="true"
                android:background="@drawable/next"
                android:onClick="NavigateToEnterOtp" />
        </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/editNumberLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/entr_ph_no"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_ph_no_logo" />

            </RelativeLayout>


                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_above="@+id/editContent"
                    android:background="@color/ColorPrimary"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"/>

                <TextView
                    android:id="@+id/entr_ph_no"
                    android:layout_above="@+id/txt_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:paddingBottom="@dimen/vertical_padding_very_very_small"
                    android:text="@string/enter_phone_number_text"
                    android:textColor="@color/ColorPrimary"
                    android:textSize="@dimen/font_size_large" />

                <TextView
                    android:id="@+id/txt_details"
                    android:layout_above="@+id/edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/horizontal_padding_very_small"
                    android:gravity="center"
                    android:text="@string/enter_phone_number_text_details"
                    android:textColor="#b7cfe9"
                    android:textSize="@dimen/font_size_small_large"
                    />

        <LinearLayout
            android:id="@+id/edit_text"
            android:layout_above="@+id/view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/getCountryCode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/countryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/vertical_padding_very_very_small"
                    android:paddingBottom="@dimen/vertical_padding_very_very_small"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_size_medium"
                    android:text="India"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/next_vector_white"
                    android:layout_gravity="end|center_vertical" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/policy"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@id/editContent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/take_a_minut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/vertical_padding_very_very_small"
                android:gravity="center"
                android:text="Take a minute to review our"
                android:textColor="@color/take_a_minut"
                android:textSize="@dimen/font_size_small_large"
                />

            <TextView
                android:id="@+id/privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/vertical_padding_very_very_small"
                android:paddingBottom="@dimen/vertical_padding_very_very_small"
                android:text="Privacy Policy"
                android:textColor="@color/ColorPrimary"
                android:textSize="@dimen/font_size_small_large"
                android:clickable="true"
                />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>