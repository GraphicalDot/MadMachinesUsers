<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/vertical_padding_small"
    android:paddingLeft="@dimen/horizontal_padding_small"
    android:paddingRight="@dimen/horizontal_padding_small"
    android:paddingTop="@dimen/vertical_padding_small"
    tools:context="com.sports.unity.common.controller.EnterPhoneActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/white_circle" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo" />

    </FrameLayout>

    <TextView
        android:id="@+id/entr_ph_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingBottom="@dimen/vertical_padding_very_very_small"
        android:paddingLeft="@dimen/horizontal_padding_very_very_small"
        android:paddingRight="@dimen/horizontal_padding_very_very_small"
        android:paddingTop="@dimen/vertical_padding_very_very_small"
        android:text="@string/enter_phone_number_text"
        android:textColor="@color/ColorPrimary"
        android:textSize="@dimen/font_size_large" />

    <TextView
        android:id="@+id/txt_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/vertical_padding_very_small"
        android:paddingLeft="@dimen/horizontal_padding_very_small"
        android:paddingRight="@dimen/horizontal_padding_very_small"
        android:paddingTop="@dimen/vertical_padding_very_small"
        android:text="@string/enter_phone_number_text_details"
        android:textColor="#b7cfe9"
        android:textSize="@dimen/font_size_small_large" />

    <LinearLayout
        android:id="@+id/getCountryCode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/vertical_padding_very_small"
        android:paddingLeft="@dimen/horizontal_padding_very_small"
        android:paddingRight="@dimen/horizontal_padding_very_small"
        android:paddingTop="@dimen/vertical_padding_very_small">

        <TextView
            android:id="@+id/countryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="India"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_medium" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/next_vector_white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/horizontal_padding_very_small"
        android:layout_marginRight="@dimen/horizontal_padding_very_small"
        android:background="@color/ColorPrimary" />

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="@dimen/edit_view_height"
        android:layout_margin="@dimen/horizontal_padding_very_small"
        android:background="@drawable/number_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/countryCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:editable="false"
            android:paddingBottom="@dimen/vertical_padding_very_small"
            android:paddingLeft="@dimen/horizontal_padding_very_small"
            android:paddingRight="@dimen/horizontal_padding_very_small"
            android:paddingTop="@dimen/vertical_padding_very_small"
            android:text="@string/country_code"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_medium" />

        <View
            android:id="@+id/seperator"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/countryCode"
            android:background="@color/ColorPrimaryDark" />

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/getOtp"
            android:layout_toRightOf="@+id/seperator"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:inputType="number"
            android:maxLength="17"
            android:paddingBottom="@dimen/vertical_padding_very_small"
            android:paddingLeft="@dimen/horizontal_padding_very_small"
            android:paddingRight="@dimen/horizontal_padding_very_small"
            android:paddingTop="@dimen/vertical_padding_very_small"
            android:textColor="@android:color/white"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font_size_medium" />

        <Button
            android:id="@+id/getOtp"
            android:layout_width="@dimen/edit_view_height"
            android:layout_height="@dimen/edit_view_height"
            android:layout_alignParentRight="true"
            android:background="@drawable/next"
            android:onClick="NavigateToEnterOtp" />

    </LinearLayout>

    <TextView
        android:id="@+id/take_a_minut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/vertical_padding_very_small"
        android:paddingLeft="@dimen/horizontal_padding_very_small"
        android:paddingRight="@dimen/horizontal_padding_very_small"
        android:paddingTop="@dimen/vertical_padding_very_small"
        android:text="Take a minute to review our"
        android:textColor="@color/take_a_minut"
        android:textSize="@dimen/font_size_small_large" />

    <TextView
        android:id="@+id/privacy_policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center"
        android:paddingBottom="@dimen/vertical_padding_very_small"
        android:paddingLeft="@dimen/horizontal_padding_very_small"
        android:paddingRight="@dimen/horizontal_padding_very_small"
        android:paddingTop="@dimen/vertical_padding_very_small"
        android:text="Privacy Policy"
        android:textColor="@color/ColorPrimary"
        android:textSize="@dimen/font_size_small_large" />

</LinearLayout>