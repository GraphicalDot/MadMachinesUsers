<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/horizontal_padding_very_small"
        android:layout_marginBottom="@dimen/horizontal_padding_small"
        android:layout_marginLeft="@dimen/horizontal_padding_small"
        android:layout_marginRight="@dimen/horizontal_padding_small"
        android:background="@color/ColorPrimary"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/horizontal_padding_very_small"
                android:text="PLAYER OF THE MATCH"
                android:textSize="@dimen/font_size_large"
                android:textColor="@color/score_light_grey"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray3" />
        </LinearLayout>
       <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/tv_first_player_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="@dimen/activity_vertical_margin_small"
               android:layout_toRightOf="@+id/iv_player_of_match"
               android:gravity="left"
               android:textSize="@dimen/font_size_medium"
               android:text="Martin Guptill"
               />
           <View
               android:id="@+id/v_divider"
               android:layout_width="fill_parent"
               android:layout_height="1dp"
               android:layout_centerInParent="true"
               android:background="@color/gray3" />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="@dimen/margin_divider"
               android:layout_marginRight="@dimen/margin_divider"
               android:layout_alignBottom="@+id/iv_player_nation">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/font_size_very_small"
                   android:layout_marginLeft="24dp"
                   android:text="90RUN"
                   android:gravity="left"
                   android:layout_weight="1"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textSize="@dimen/font_size_very_small"
                   android:text="76 BALL"
                   android:gravity="center"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/font_size_very_small"
                   android:text="118SR"
                   android:layout_weight="1"
                   android:gravity="right"
                   />
           </LinearLayout>

           <ImageView
               android:id="@+id/iv_player_of_match"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_marginLeft="@dimen/activity_vertical_margin_small"
               android:src="@drawable/ic_user"/>

           <ImageView
               android:id="@+id/iv_player_nation"
               android:layout_marginTop="24dp"
               android:layout_marginLeft="40dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_distance_slider_01"/>
       </RelativeLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/horizontal_padding_very_small"
        android:layout_marginBottom="@dimen/horizontal_padding_small"
        android:layout_marginLeft="@dimen/horizontal_padding_small"
        android:layout_marginRight="@dimen/horizontal_padding_small"
        android:background="@color/ColorPrimary"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/horizontal_padding_very_small"
                android:text="MATCH INFO"
                android:textSize="@dimen/font_size_large"
                android:textColor="@color/score_light_grey"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray3" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MATCH"
                    android:textSize="@dimen/font_size_medium"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ist ODI , New Zeland Vs India"
                    android:textColor="@color/score_light_grey"
                    android:layout_marginLeft="@dimen/horizontal_padding_small"
                    android:textSize="@dimen/font_size_small_large"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DATE"
                    android:textSize="@dimen/font_size_medium"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3rd Feb"
                    android:textColor="@color/score_light_grey"
                    android:layout_marginLeft="@dimen/horizontal_padding_small"
                    android:textSize="@dimen/font_size_small_large"
                    />
            </LinearLayout><LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOSS"
                android:textSize="@dimen/font_size_medium"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="India won the toss"
                android:textColor="@color/score_light_grey"
                android:layout_marginLeft="@dimen/horizontal_padding_small"
                android:textSize="@dimen/font_size_small_large"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Umpires"
                    android:textSize="@dimen/font_size_medium"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rahul"
                    android:textColor="@color/score_light_grey"
                    android:layout_marginLeft="@dimen/horizontal_padding_small"
                    android:textSize="@dimen/font_size_small_large"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MATCH REFEREE"
                    android:textSize="@dimen/font_size_medium"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Board , BCC"
                    android:textColor="@color/score_light_grey"
                    android:layout_marginLeft="@dimen/horizontal_padding_small"
                    android:textSize="@dimen/font_size_small_large"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>