<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:padding="@dimen/horizontal_padding_small"
        card:cardCornerRadius="@dimen/card_edge_curve_radius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ColorPrimary"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/horizontal_padding_small">

                <com.sports.unity.common.view.CustomRobotoRegularTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/horizontal_padding_very_small"
                    android:text="@string/player_of_the_match"
                    android:textColor="@color/score_light_grey"
                    android:textSize="@dimen/font_size_medium" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray3" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/play_info_root"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/horizontal_padding_small">

                <FrameLayout
                    android:id="@+id/player_info_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/player_profile_image"
                        android:layout_width="@dimen/profile_thumb_image_xlarge"
                        android:layout_height="@dimen/profile_thumb_image_xlarge"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/vertical_padding_very_very_small"
                        android:src="@drawable/ic_user" />

                    <ImageView
                        android:id="@+id/player_tag_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:src="@drawable/ic_distance_slider_01" />
                </FrameLayout>

                <com.sports.unity.common.view.CustomRobotoRegularTextView
                    android:id="@+id/tv_first_player_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_vertical_margin_small"
                    android:layout_marginTop="@dimen/activity_vertical_margin_large"
                    android:layout_toRightOf="@id/player_info_layout"
                    android:text="Martin Guptill"
                    android:textSize="@dimen/font_size_small_large" />

                <View
                    android:id="@+id/v_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/player_info_layout"
                    android:background="@color/gray3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/player_info_layout"
                    android:layout_marginBottom="@dimen/activity_vertical_margin_large"
                    android:layout_toRightOf="@id/player_info_layout">

                    <com.sports.unity.common.view.CustomRobotoRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="90RUN"
                        android:textSize="@dimen/font_size_very_small" />

                    <com.sports.unity.common.view.CustomRobotoRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="76 BALL"
                        android:textSize="@dimen/font_size_very_small" />

                    <com.sports.unity.common.view.CustomRobotoRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="118SR"
                        android:textSize="@dimen/font_size_very_small" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:padding="@dimen/horizontal_padding_small"
        card:cardCornerRadius="@dimen/card_edge_curve_radius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ColorPrimary"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/horizontal_padding_small">

                <com.sports.unity.common.view.CustomRobotoRegularTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/match_info"
                    android:textColor="@color/score_light_grey"
                    android:textSize="@dimen/font_size_medium" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray3" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/horizontal_padding_very_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/horizontal_padding_small">

                    <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MATCH"
                        android:textSize="@dimen/font_size_small_large" />

                    <com.sports.unity.common.view.CustomRobotoRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/horizontal_padding_small"
                        android:text="Ist ODI , New Zeland Vs India"
                        android:textColor="@color/score_light_grey"
                        android:textSize="@dimen/font_size_small_large" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/horizontal_padding_small">

                    <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DATE"
                        android:textSize="@dimen/font_size_small_large" />

                    <com.sports.unity.common.view.CustomRobotoRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/horizontal_padding_small"
                        android:text="3rd Feb"
                        android:textColor="@color/score_light_grey"
                        android:textSize="@dimen/font_size_very_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/horizontal_padding_small">

                    <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOSS"
                        android:textSize="@dimen/font_size_small_large" />

                    <com.sports.unity.common.view.CustomRobotoRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/horizontal_padding_small"
                        android:text="India won the toss"
                        android:textColor="@color/score_light_grey"
                        android:textSize="@dimen/font_size_very_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/horizontal_padding_small">

                    <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Umpires"
                        android:textSize="@dimen/font_size_small_large" />

                    <com.sports.unity.common.view.CustomRobotoRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/horizontal_padding_small"
                        android:text="Rahul"
                        android:textColor="@color/score_light_grey"
                        android:textSize="@dimen/font_size_very_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/horizontal_padding_small">

                    <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MATCH REFEREE"
                        android:textSize="@dimen/font_size_small_large" />

                    <com.sports.unity.common.view.CustomRobotoRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/horizontal_padding_small"
                        android:text="Board , BCC"
                        android:textColor="@color/score_light_grey"
                        android:textSize="@dimen/font_size_very_small" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <include
        android:id="@+id/error"
        layout="@layout/error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</LinearLayout>