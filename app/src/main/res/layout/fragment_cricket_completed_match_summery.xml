<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/horizontal_padding_very_small"
        android:layout_marginBottom="@dimen/horizontal_padding_small"
        android:layout_marginLeft="@dimen/horizontal_padding_small"
        android:layout_marginRight="@dimen/horizontal_padding_small"
        android:background="@color/ColorPrimary"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/horizontal_padding_very_small"
                android:text="PLAYER OF THE MATCH"
                android:textSize="@dimen/font_size_medium"
                android:textColor="@color/score_light_grey"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray3" />
        </LinearLayout>
       <RelativeLayout
           android:id="@+id/play_info_root"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content">
           <FrameLayout
               android:id="@+id/player_info_layout"
               android:layout_gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <de.hdodenhof.circleimageview.CircleImageView
                   android:id="@+id/player_profile_image"
                   android:layout_width="@dimen/profile_thumb_image_xlarge"
                   android:layout_height="@dimen/profile_thumb_image_xlarge"
                   android:layout_gravity="center"
                   android:layout_margin="@dimen/vertical_padding_very_very_small"
                   android:src="@drawable/ic_user" />
               <ImageView
                   android:layout_gravity="bottom|end"
                   android:id="@+id/player_tag_image"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_distance_slider_01" />
           </FrameLayout>
           <TextView
               android:id="@+id/tv_first_player_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/activity_vertical_margin_large"
               android:layout_marginLeft="@dimen/activity_vertical_margin_small"
               android:layout_toRightOf="@id/player_info_layout"
               android:textSize="@dimen/font_size_small_large"
               android:text="Martin Guptill"
               />
           <View
               android:layout_toRightOf="@id/player_info_layout"
               android:id="@+id/v_divider"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_centerInParent="true"
               android:background="@color/gray3" />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_alignBottom="@id/player_info_layout"
               android:layout_marginBottom="@dimen/activity_vertical_margin_large"
               android:layout_toRightOf="@id/player_info_layout"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/font_size_very_small"
                   android:layout_marginLeft="24dp"
                   android:text="90RUN"
                   android:gravity="left"
                   android:layout_weight="1"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textSize="@dimen/font_size_very_small"
                   android:text="76 BALL"
                   android:gravity="center"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/font_size_very_small"
                   android:text="118SR"
                   android:layout_weight="1"
                   android:gravity="center"
                   />
           </LinearLayout>
       </RelativeLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/horizontal_padding_very_small"
        android:layout_marginBottom="@dimen/horizontal_padding_small"
        android:layout_marginLeft="@dimen/horizontal_padding_small"
        android:layout_marginRight="@dimen/horizontal_padding_small"
        android:background="@color/ColorPrimary"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/horizontal_padding_very_small"
                android:text="MATCH INFO"
                android:textSize="@dimen/font_size_medium"
                android:textColor="@color/score_light_grey"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray3" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/horizontal_padding_very_small"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MATCH"
                    android:textSize="@dimen/font_size_small_large"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ist ODI , New Zeland Vs India"
                    android:textColor="@color/score_light_grey"
                    android:layout_marginLeft="@dimen/horizontal_padding_small"
                    android:textSize="@dimen/font_size_very_small"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DATE"
                    android:textSize="@dimen/font_size_small_large"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3rd Feb"
                    android:textColor="@color/score_light_grey"
                    android:layout_marginLeft="@dimen/horizontal_padding_small"
                    android:textSize="@dimen/font_size_very_small"
                    />
            </LinearLayout><LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOSS"
                android:textSize="@dimen/font_size_small_large"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="India won the toss"
                android:textColor="@color/score_light_grey"
                android:layout_marginLeft="@dimen/horizontal_padding_small"
                android:textSize="@dimen/font_size_very_small"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Umpires"
                    android:textSize="@dimen/font_size_small_large"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rahul"
                    android:textColor="@color/score_light_grey"
                    android:layout_marginLeft="@dimen/horizontal_padding_small"
                    android:textSize="@dimen/font_size_very_small"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MATCH REFEREE"
                    android:textSize="@dimen/font_size_small_large"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Board , BCC"
                    android:textColor="@color/score_light_grey"
                    android:layout_marginLeft="@dimen/horizontal_padding_small"
                    android:textSize="@dimen/font_size_very_small"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>