<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingTop="@dimen/vertical_padding_very_very_small"
    android:paddingBottom="@dimen/vertical_padding_very_very_small"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <View
            android:id="@+id/ll_live_team"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/app_theme_blue"
            android:visibility="gone"></View>

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/horizontal_padding_very_small">

            <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                android:id="@+id/tv_serial_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/news_static"
                android:textSize="@dimen/font_size_small_medium"
                android:visibility="visible"
                card_view:layout_widthPercent="26%" />

            <ImageView
                android:id="@+id/iv_team_profile_image"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_serial_number"
                android:foregroundGravity="center"
                android:visibility="gone"
                card_view:layout_widthPercent="0%" />

            <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                android:id="@+id/tv_team_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_team_profile_image"
                android:gravity="left"
                android:paddingLeft="@dimen/horizontal_padding_very_very_small"
                android:text=""
                android:textColor="@color/news_static"
                android:textSize="@dimen/font_size_small_medium"
                card_view:layout_widthPercent="20%" />

            <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                android:id="@+id/tv_p"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_team_name"
                android:gravity="right"
                android:text="P"
                android:textColor="@color/news_static"
                android:textSize="@dimen/font_size_small_medium"
                card_view:layout_widthPercent="7%" />

            <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                android:id="@+id/tv_w"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_p"
                android:gravity="right"
                android:text="W"
                android:textColor="@color/news_static"
                android:textSize="@dimen/font_size_small_medium"
                card_view:layout_widthPercent="12%" />

            <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                android:id="@+id/tv_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_w"
                android:gravity="right"
                android:text="D"
                android:textColor="@color/news_static"
                android:textSize="@dimen/font_size_small_medium"
                card_view:layout_widthPercent="10%" />

            <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                android:id="@+id/tv_l"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_d"
                android:gravity="right"
                android:text="L"
                android:textColor="@color/news_static"
                android:textSize="@dimen/font_size_small_medium"
                card_view:layout_widthPercent="10%" />

            <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                android:id="@+id/tv_pts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_l"
                android:gravity="right"
                android:text="Pts"
                android:textColor="@color/news_static"
                android:textSize="@dimen/font_size_small_medium"
                card_view:layout_widthPercent="15%" />
        </android.support.percent.PercentRelativeLayout>
    </LinearLayout>
</LinearLayout>