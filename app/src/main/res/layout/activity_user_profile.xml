<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorPrimary"
    android:focusableInTouchMode="true"
    tools:context="com.sports.unity.common.controller.UserProfileActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar_userdetails"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:minHeight="?android:attr/actionBarSize" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tool_bar"
            android:background="@color/gray3"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/profile_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tool_bar"
                android:background="@drawable/round_edge_black_box"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_picture"
                    android:layout_width="@dimen/profile_thumb_image_xxlarge"
                    android:layout_height="@dimen/profile_thumb_image_xxlarge"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/vertical_padding_very_very_small"
                    android:src="@drawable/ic_user" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/horizontal_padding_very_small"
                    android:gravity="center"
                    android:padding="@dimen/horizontal_padding_very_small"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_size_large" />


                <FrameLayout
                    android:id="@+id/faceBook_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/horizontal_padding_very_small"
                    android:visibility="gone">

                    <com.facebook.login.widget.LoginButton xmlns:facebook="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/login_button_facebook"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_below="@+id/nameView"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/vertical_padding_medium"
                        android:layout_marginStart="@dimen/vertical_padding_medium"
                        android:textSize="@dimen/font_size_small_medium"
                        facebook:com_facebook_login_text="USE MY FACEBOOK DETAILS" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/white_stroke_round_edge_button">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="@dimen/facebook_logo_padding"
                            android:layout_marginRight="@dimen/facebook_logo_padding"
                            android:background="@android:color/transparent"
                            android:src="@drawable/fb" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="1dp"
                            android:layout_marginTop="1dp"
                            android:background="@color/facebook_button_separator" />

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@android:color/transparent"
                            android:clickable="false"
                            android:text="USE MY FACEBOOK DETAILS"
                            android:textColor="@color/ColorPrimary"
                            android:textSize="@dimen/font_size_small_medium" />
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_info"
                    android:layout_margin="@dimen/horizontal_padding_very_small"
                    android:background="@drawable/round_edge_black_box"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/current_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/horizontal_padding_small"
                        android:text="@string/current_status"
                        android:textColor="@color/app_theme_blue" />


                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.3dp"
                        android:background="@color/grayBorder" />

                    <EditText
                        android:id="@+id/your_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/horizontal_padding_small"
                        android:text="Good players inspire themselves, great players inspire others!!!"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_small_large" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/favDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:id="@+id/team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status"
                android:layout_gravity="center"
                android:layout_margin="@dimen/horizontal_padding_very_small"
                android:background="@drawable/round_edge_black_box">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/fav_team"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/horizontal_padding_small"
                        android:text="@string/fav_team"
                        android:textColor="@color/app_theme_blue" />

                    <TextView
                        android:id="@+id/edit_team"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/horizontal_padding_small"
                        android:text="@string/edit_caps"
                        android:layout_gravity="right"
                        android:textColor="@color/app_theme_blue" />
                    </FrameLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.3dp"
                        android:background="@color/grayBorder" />


                    <LinearLayout
                        android:id="@+id/teamlist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/league"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/team"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/horizontal_padding_very_small"
                android:layout_marginRight="@dimen/horizontal_padding_very_small"
                android:background="@drawable/round_edge_black_box">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/fav_league"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/horizontal_padding_small"
                        android:text="@string/fav_league"
                        android:textColor="@color/app_theme_blue" />

                    <TextView
                        android:id="@+id/edit_league"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/horizontal_padding_small"
                        android:text="@string/edit_caps"
                        android:layout_gravity="right"
                        android:textColor="@color/app_theme_blue" />
                </FrameLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.3dp"
                        android:background="@color/grayBorder" />

                    <LinearLayout
                        android:id="@+id/leaguelist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/league"
                android:layout_gravity="center"
                android:layout_margin="@dimen/horizontal_padding_very_small"
                android:background="@drawable/round_edge_black_box"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                    android:id="@+id/fav_player"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/horizontal_padding_small"
                    android:text="@string/fav_player"
                    android:textColor="@color/app_theme_blue" />

                <TextView
                    android:id="@+id/edit_player"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/horizontal_padding_small"
                    android:text="@string/edit_caps"
                    android:layout_gravity="right"
                    android:textColor="@color/app_theme_blue" />

                </FrameLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/grayBorder" />

                <LinearLayout
                    android:id="@+id/playerlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>
                </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

</RelativeLayout>





