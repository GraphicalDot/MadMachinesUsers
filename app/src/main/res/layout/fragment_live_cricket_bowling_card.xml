<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layout_batting"
                android:layout_width="match_parent"
                android:background="@color/ColorPrimary"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_bowler_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/vertical_padding_small"
                    android:textSize="@dimen/font_size_small_large"
                    android:layout_weight=".5"
                    android:text="Martin Guptile"/>
                <TextView
                    android:id="@+id/tv_over"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_small_large"
                    android:layout_weight=".1"
                    android:text="35"/>
                <TextView
                    android:id="@+id/tv_midden_over"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_small_large"
                    android:layout_weight=".1"
                    android:text="42"/>
                <TextView
                    android:id="@+id/tv_runs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_small_large"
                    android:layout_weight=".1"
                    android:text="5"/>
                <TextView
                    android:id="@+id/tv_wicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_small_large"
                    android:layout_weight=".1"
                    android:text="0"/>
                <TextView
                    android:id="@+id/tv_extra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_small_large"
                    android:layout_weight=".1"
                    android:text="83.33"/>

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>