<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sports.unity.common.controller.TourOne">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="0.75"
           android:background="@color/tour_news_color"
           android:id="@+id/frame">
           <ImageView
               android:id="@+id/img"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:src="@drawable/tour_img_2"
               android:layout_gravity="bottom"
               />
           </FrameLayout>
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="@string/tour_news_title"
                android:paddingTop="20dp"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                android:gravity="center"
                android:paddingTop="@dimen/vertical_padding_very_small"
                android:paddingBottom="@dimen/vertical_padding_very_small"
                android:paddingLeft="@dimen/vertical_padding_medium"
                android:paddingRight="@dimen/vertical_padding_medium"
                android:textColor="@color/text_color"
                android:text="@string/tour_news_details"/>
   </LinearLayout>

</LinearLayout>
