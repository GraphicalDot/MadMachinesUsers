<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:padding="@dimen/horizontal_padding_small"
    card:cardCornerRadius="@dimen/card_edge_curve_radius">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorPrimary"
        android:orientation="vertical"
        android:padding="@dimen/horizontal_padding_small">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.sports.unity.common.view.CustomRobotoCondenseRegularTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/horizontal_padding_very_small"
                android:text="@string/match_info"
                android:textColor="@color/score_light_grey"
                android:textSize="@dimen/font_size_small_large" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/horizontal_padding_small">

                <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/match"
                    android:textSize="@dimen/font_size_small_large" />

                <com.sports.unity.common.view.CustomRobotoRegularTextView
                    android:id="@+id/tv_match_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/horizontal_padding_small"
                    android:text="Ist ODI , New Zeland Vs India"
                    android:textColor="@color/score_light_grey"
                    android:textSize="@dimen/font_size_small_medium" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/horizontal_padding_small">

                <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textSize="@dimen/font_size_small_large"
                    />

                <com.sports.unity.common.view.CustomRobotoRegularTextView
                    android:id="@+id/tv_match_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/horizontal_padding_small"
                    android:text="3rd Feb"
                    android:textColor="@color/score_light_grey"
                    android:textSize="@dimen/font_size_small_medium"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/horizontal_padding_small">

                <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/toss"
                    android:textSize="@dimen/font_size_small_large" />

                <com.sports.unity.common.view.CustomRobotoRegularTextView
                    android:id="@+id/tv_match_toss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/horizontal_padding_small"
                    android:text="Team will be announced at  the toss."
                    android:textColor="@color/score_light_grey"
                    android:textSize="@dimen/font_size_small_medium" />
            </LinearLayout>

        </LinearLayout>
        <include
            android:id="@+id/error"
            layout="@layout/error_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
    </LinearLayout>
</android.support.v7.widget.CardView>