<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sports.unity.messages.controller.fragment.FootballEmojiFragment">

    <GridView
        android:id="@+id/emoji"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnWidth="@dimen/stickers_size"
        android:gravity="center"
        android:horizontalSpacing="@dimen/horizontal_padding_very_small"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/vertical_padding_very_small" />

</FrameLayout>
