<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/gray3"
        android:paddingBottom="@dimen/horizontal_padding_very_very_small"
        android:paddingLeft="@dimen/horizontal_padding_small"
        android:paddingRight="@dimen/horizontal_padding_small"
        android:paddingTop="@dimen/horizontal_padding_very_very_small">

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/layout_batting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_widthPercent="37%">

                <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                    android:id="@+id/tv_team_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/news_static"
                    android:textSize="@dimen/font_size_small_medium" />

                <com.sports.unity.common.view.CustomRobotoRegularTextView
                    android:id="@+id/tv_match_over"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="@dimen/horizontal_padding_very_very_small"
                    android:text=""
                    android:textColor="@color/gray1"
                    android:textSize="@dimen/font_size_small_medium" />
            </LinearLayout>

            <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                android:id="@+id/tv_player_run"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ll_score"
                android:gravity="right"
                android:text="@string/r"
                android:textColor="@color/news_static"
                android:textSize="@dimen/font_size_small_medium"
                app:layout_widthPercent="10%" />

            <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                android:id="@+id/tv_ball_play_by_player"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_player_run"
                android:gravity="right"
                android:text="@string/b"
                android:textColor="@color/news_static"
                android:textSize="@dimen/font_size_small_medium"
                app:layout_widthPercent="13%" />

            <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                android:id="@+id/tv_four_gain_by_player"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_ball_play_by_player"
                android:gravity="right"
                android:text="@string/s"
                android:textColor="@color/news_static"
                android:textSize="@dimen/font_size_small_medium"
                app:layout_widthPercent="11%" />

            <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                android:id="@+id/tv_six_gain_by_player"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_four_gain_by_player"
                android:gravity="right"
                android:text="@string/sixs"
                android:textColor="@color/news_static"
                android:textSize="@dimen/font_size_small_medium"
                app:layout_widthPercent="11%" />

            <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_six_gain_by_player"
                android:gravity="right"
                android:text="@string/sr"
                android:textColor="@color/news_static"
                android:textSize="@dimen/font_size_small_medium"
                app:layout_widthPercent="18%" />

        </android.support.percent.PercentRelativeLayout>
    </FrameLayout>

</LinearLayout>