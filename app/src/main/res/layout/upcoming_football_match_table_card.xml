<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/ll_live_team"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/app_theme_blue"
            android:visibility="gone"></View>

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/horizontal_padding_very_small"
            android:paddingLeft="@dimen/horizontal_padding_very_small"
            android:paddingTop="@dimen/horizontal_padding_very_small">

            <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                android:id="@+id/tv_serial_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/news_static"
                android:textSize="@dimen/font_size_small_medium"
                card_view:layout_widthPercent="5%" />

            <ImageView
                android:id="@+id/iv_team_profile_image"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_serial_number"
                android:foregroundGravity="center"
                card_view:layout_widthPercent="8%" />

            <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                android:id="@+id/tv_team_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_team_profile_image"
                android:gravity="left"
                android:paddingLeft="@dimen/horizontal_padding_very_very_small"
                android:text=""
                android:textColor="@color/news_static"
                android:textSize="@dimen/font_size_small_medium"
                card_view:layout_widthPercent="35%" />

            <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                android:id="@+id/tv_p"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_team_name"
                android:gravity="center"
                android:text=""
                android:textColor="@color/news_static"
                android:textSize="@dimen/font_size_small_medium"
                card_view:layout_widthPercent="8%" />

            <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                android:id="@+id/tv_w"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_p"
                android:gravity="center"
                android:text=""
                android:textColor="@color/news_static"
                android:textSize="@dimen/font_size_small_medium"
                card_view:layout_widthPercent="8%" />

            <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                android:id="@+id/tv_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_w"
                android:gravity="center"
                android:text=""
                android:textColor="@color/news_static"
                android:textSize="@dimen/font_size_small_medium"
                card_view:layout_widthPercent="8%" />

            <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                android:id="@+id/tv_l"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_d"
                android:gravity="center"
                android:text=""
                android:textColor="@color/news_static"
                android:textSize="@dimen/font_size_small_medium"
                card_view:layout_widthPercent="8%" />

            <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                android:id="@+id/tv_gd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_l"
                android:gravity="center"
                android:text=""
                android:textColor="@color/news_static"
                android:textSize="@dimen/font_size_small_medium"
                card_view:layout_widthPercent="8%" />

            <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                android:id="@+id/tv_pts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_gd"
                android:gravity="center"
                android:text=""
                android:textColor="@color/news_static"
                android:textSize="@dimen/font_size_small_medium"
                card_view:layout_widthPercent="8%" />
        </android.support.percent.PercentRelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray3"></View>
</LinearLayout>
