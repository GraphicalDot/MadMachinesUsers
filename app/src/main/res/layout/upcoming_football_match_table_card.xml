<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingRight="@dimen/vertical_padding_very_very_small">

            <android.support.percent.PercentRelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
                android:paddingBottom="@dimen/horizontal_padding_small"
                android:paddingLeft="@dimen/horizontal_padding_small"
                android:paddingRight="@dimen/horizontal_padding_medium"
                android:paddingTop="@dimen/horizontal_padding_small">

                <com.sports.unity.common.view.CustomRobotoRegularTextView
                   android:id="@+id/tv_serial_number"
                    android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="1"
                    android:textSize="@dimen/font_size_small_large"
                    card_view:layout_widthPercent="12%"
                   />
               <ImageView
                   android:id="@+id/iv_team_profile_image"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_toRightOf="@id/tv_serial_number"
                   android:src="@drawable/ic_distance_slider_01"/>

                <com.sports.unity.common.view.CustomRobotoRegularTextView
                   android:id="@+id/tv_team_name"
                    android:layout_width="0dp"
                   android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_team_profile_image"
                    android:gravity="right"
                   android:text="India"
                    android:textSize="@dimen/font_size_small_large"
                    card_view:layout_widthPercent="14%"
                   />

                <com.sports.unity.common.view.CustomRobotoRegularTextView
                   android:id="@+id/tv_p"
                    android:layout_width="0dp"
                   android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_team_name"
                    android:gravity="right"
                   android:text="3"
                    android:textSize="@dimen/font_size_small_large"
                    card_view:layout_widthPercent="10%"
                   />

                <com.sports.unity.common.view.CustomRobotoRegularTextView
                   android:id="@+id/tv_w"
                    android:layout_width="0dp"
                   android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_p"
                    android:gravity="right"
                   android:text="4"
                    android:textSize="@dimen/font_size_small_large"
                    card_view:layout_widthPercent="10%"
                   />

                <com.sports.unity.common.view.CustomRobotoRegularTextView
                   android:id="@+id/tv_d"
                    android:layout_width="0dp"
                   android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_w"
                    android:gravity="right"
                   android:text="5"
                    android:textSize="@dimen/font_size_small_large"
                    card_view:layout_widthPercent="10%"
                   />

                <com.sports.unity.common.view.CustomRobotoRegularTextView
                   android:id="@+id/tv_l"
                    android:layout_width="0dp"
                   android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_d"
                    android:gravity="right"
                   android:text="6"
                    android:textSize="@dimen/font_size_small_large"
                    card_view:layout_widthPercent="10%"
                   />

                <com.sports.unity.common.view.CustomRobotoRegularTextView
                   android:id="@+id/tv_pts"
                    android:layout_width="0dp"
                   android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_l"
                    android:gravity="right"
                   android:text="7"
                    android:textSize="@dimen/font_size_small_large"
                    card_view:layout_widthPercent="10%"
                   />
            </android.support.percent.PercentRelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>