<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/vertical_padding_very_very_small"
            android:background="@android:color/white"
            android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:weightSum="8">
               <TextView
                   android:id="@+id/tv_serial_number"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/font_size_small_large"
                   android:layout_weight="1"
                   android:layout_marginTop="@dimen/horizontal_padding_small"
                   android:gravity="right"
                   android:text="1"
                   />
               <ImageView
                   android:id="@+id/iv_team_profile_image"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_weight="1"
                   android:src="@drawable/ic_distance_slider_01"/>
               <TextView
                   android:id="@+id/tv_team_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_marginTop="@dimen/horizontal_padding_small"
                   android:textSize="@dimen/font_size_small_large"
                   android:layout_weight="1"
                   android:text="India"
                   />
               <TextView
                   android:id="@+id/tv_p"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_marginTop="@dimen/horizontal_padding_small"
                   android:textSize="@dimen/font_size_small_large"
                   android:layout_weight="1"
                   android:text="3"
                   />
               <TextView
                   android:id="@+id/tv_w"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_marginTop="@dimen/horizontal_padding_small"
                   android:textSize="@dimen/font_size_small_large"
                   android:layout_weight="1"
                   android:text="4"
                   />
               <TextView
                   android:id="@+id/tv_d"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_marginTop="@dimen/horizontal_padding_small"
                   android:textSize="@dimen/font_size_small_large"
                   android:layout_weight="1"
                   android:text="5"
                   />
               <TextView
                   android:id="@+id/tv_l"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_marginTop="@dimen/horizontal_padding_small"
                   android:textSize="@dimen/font_size_small_large"
                   android:layout_weight="1"
                   android:text="6"
                   />
               <TextView
                   android:id="@+id/tv_pts"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_marginTop="@dimen/horizontal_padding_small"
                   android:textSize="@dimen/font_size_small_large"
                   android:layout_weight="1"
                   android:text="7"
                   />
           </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>