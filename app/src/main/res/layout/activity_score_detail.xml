<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorPrimary"
    android:orientation="vertical"
    tools:context="com.sports.unity.scores.ScoreDetailActivity">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/toolbar_score_details"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:minHeight="?android:attr/actionBarSize" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray3"
            android:elevation="@dimen/toolbar_elevation"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/horizontal_strip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                    android:id="@+id/venue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/vertical_padding_small"
                    android:layout_marginTop="@dimen/vertical_padding_very_very_small"
                    android:text="Eden park, AuckLand"
                    android:textColor="@color/score_dark_grey"
                    android:textSize="@dimen/font_size_small_medium"
                    />

                <com.sports.unity.common.view.CustomRobotoCondenseRegularTextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/vertical_padding_very_very_small"
                    android:layout_marginLeft="@dimen/vertical_padding_small"
                    android:text="Wednesday, February 3, 6:30 AM (IST)"
                    android:textColor="@color/score_light_grey"
                    android:textSize="@dimen/font_size_small_medium"
                    />

            </LinearLayout>
            <!--  <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginRight="@dimen/activity_vertical_margin"
                  android:layout_marginTop="@dimen/vertical_padding_very_very_small"
                  android:orientation="horizontal">
                  <ImageView
                      android:id="@+id/iv_friends"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginLeft="@dimen/vertical_padding_small"
                      android:src="@drawable/ic_teams"
                      />
                  <TextView
                      android:id="@+id/tv_friends_count"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginLeft="@dimen/vertical_padding_small"
                      android:text="10\u207a Friends"
                      android:textColor="@color/score_dark_grey"
                      android:textSize="@dimen/font_size_small_medium"
                      />
              </LinearLayout>-->

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray3"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/vertical_padding_medium"
            android:paddingLeft="@dimen/horizontal_padding_large"
            android:paddingRight="@dimen/horizontal_padding_large"
            android:paddingTop="@dimen/vertical_padding_medium">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/flag1_parent_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/team1_image"
                        android:layout_width="@dimen/flag_size_large"
                        android:layout_height="@dimen/flag_size_large"
                        android:src="@drawable/ic_teams"
                        />

                    <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                        android:id="@+id/team1_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/horizontal_padding_very_small"
                        android:text="308/8"
                        android:textSize="@dimen/font_size_small_large"
                        />

                    <com.sports.unity.common.view.CustomRobotoRegularTextView
                        android:id="@+id/team1_over"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(50)"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/font_size_small_large" />
                </LinearLayout>

                <com.sports.unity.common.view.CustomRobotoRegularTextView
                    android:id="@+id/team1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:text="india"
                    android:textColor="@color/gray1"
                    android:textSize="@dimen/font_size_small_medium"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/flag2_parent_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/team2_image"
                        android:layout_width="@dimen/flag_size_large"
                        android:layout_height="@dimen/flag_size_large"
                        android:src="@drawable/ic_teams"
                        />

                    <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                        android:id="@+id/team2_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/horizontal_padding_very_small"
                        android:text="148/8"
                        android:textSize="@dimen/font_size_small_large"
                        />

                    <com.sports.unity.common.view.CustomRobotoRegularTextView
                        android:id="@+id/team2_over"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(49)"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/font_size_small_large" />
                </LinearLayout>

                <com.sports.unity.common.view.CustomRobotoRegularTextView
                    android:id="@+id/team2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:text="Australia"
                    android:textColor="@color/gray1"
                    android:textSize="@dimen/font_size_small_medium"
                    />

            </LinearLayout>
        </FrameLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/tab_seperator" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
            android:id="@+id/tv_needed_run"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="56 Needed of 21 Ball/Trail by 231 Run"
            android:textSize="@dimen/font_size_small_large"/>

        <com.sports.unity.common.view.CustomRobotoCondenseRegularTextView
            android:id="@+id/tv_current_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Run Rate 5.00 / Required Run Rate 7.00"
            android:textColor="@color/gray1"
            android:textSize="@dimen/font_size_small_medium"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/tab_seperator" />

        <com.sports.unity.common.view.SlidingTabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/cardview_light_background"
            />


        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/ColorPrimary" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </android.support.v4.view.ViewPager>
   </LinearLayout>


    <include
        android:id="@+id/error"
        layout="@layout/error_layout"
        android:background="@color/app_theme_blue"
        android:elevation="@dimen/toolbar_elevation" />


</LinearLayout>
