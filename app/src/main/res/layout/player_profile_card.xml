<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:padding="@dimen/horizontal_padding_small"
    card:cardCornerRadius="@dimen/card_edge_curve_radius">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="@dimen/horizontal_padding_small"
        android:weightSum="7">

        <com.sports.unity.common.view.CustomRobotoRegularTextView
            android:id="@+id/league_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="league"
            android:textSize="@dimen/font_size_small_medium" />

        <com.sports.unity.common.view.CustomRobotoRegularTextView
            android:id="@+id/team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="tem"
            android:textSize="@dimen/font_size_small_medium" />

        <com.sports.unity.common.view.CustomRobotoRegularTextView
            android:id="@+id/game_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:textSize="@dimen/font_size_small_medium" />

        <com.sports.unity.common.view.CustomRobotoRegularTextView
            android:id="@+id/goals_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="3"
            android:textSize="@dimen/font_size_small_medium" />

        <com.sports.unity.common.view.CustomRobotoRegularTextView
            android:id="@+id/assist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="6"
            android:textSize="@dimen/font_size_small_medium" />

        <com.sports.unity.common.view.CustomRobotoRegularTextView
            android:id="@+id/yc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2"
            android:textSize="@dimen/font_size_small_medium" />

        <com.sports.unity.common.view.CustomRobotoRegularTextView
            android:id="@+id/rc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="8"
            android:textSize="@dimen/font_size_small_medium" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray3"></View>
</android.support.v7.widget.CardView>

