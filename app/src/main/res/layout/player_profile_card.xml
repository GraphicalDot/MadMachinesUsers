<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray3"></View>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/horizontal_padding_very_small"
        android:paddingTop="@dimen/horizontal_padding_very_small">

        <com.sports.unity.common.view.CustomRobotoRegularTextView
            android:id="@+id/team_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="asd"
            android:textSize="@dimen/font_size_small_medium"
            app:layout_widthPercent="26%" />

        <com.sports.unity.common.view.CustomRobotoRegularTextView
            android:id="@+id/league_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/team_name"
            android:ellipsize="end"
            android:gravity="center"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="asd"
            android:textSize="@dimen/font_size_small_medium"
            app:layout_widthPercent="26%" />

        <com.sports.unity.common.view.CustomRobotoRegularTextView
            android:id="@+id/game_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/league_name"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/font_size_small_medium"
            app:layout_widthPercent="10%" />

        <com.sports.unity.common.view.CustomRobotoRegularTextView
            android:id="@+id/goals_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/game_count"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/font_size_small_medium"
            app:layout_widthPercent="11%" />

        <com.sports.unity.common.view.CustomRobotoRegularTextView
            android:id="@+id/assist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/goals_count"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/font_size_small_medium"
            app:layout_widthPercent="11%" />

        <com.sports.unity.common.view.CustomRobotoRegularTextView
            android:id="@+id/yc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/assist"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/font_size_small_medium"
            app:layout_widthPercent="8%" />

        <com.sports.unity.common.view.CustomRobotoRegularTextView
            android:id="@+id/rc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/yc"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/font_size_small_medium"
            app:layout_widthPercent="8%" />
    </android.support.percent.PercentRelativeLayout>

</LinearLayout>

