<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:padding="@dimen/horizontal_padding_small"
    app:cardCornerRadius="@dimen/card_edge_curve_radius">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorPrimary"
        android:padding="@dimen/horizontal_padding_small">

        <com.sports.unity.common.view.CustomRobotoRegularTextView
            android:id="@+id/league_name"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="league"
            android:textSize="@dimen/font_size_small_medium"
            app:layout_widthPercent="15%" />
        <com.sports.unity.common.view.CustomRobotoRegularTextView
            android:id="@+id/team_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/league_name"
            android:text="tem"
            android:textSize="@dimen/font_size_small_medium"
            app:layout_widthPercent="15%" />
        <com.sports.unity.common.view.CustomRobotoRegularTextView
            android:id="@+id/game_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/team_name"
            android:text="1"
            android:textSize="@dimen/font_size_small_medium"
            app:layout_widthPercent="14%" />
        <com.sports.unity.common.view.CustomRobotoRegularTextView
            android:id="@+id/goals_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/game_count"
            android:text="3"
            android:textSize="@dimen/font_size_small_medium"
            app:layout_widthPercent="14%" />
        <com.sports.unity.common.view.CustomRobotoRegularTextView
            android:id="@+id/assist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/goals_count"
            android:text="6"
            android:textSize="@dimen/font_size_small_medium"
            app:layout_widthPercent="14%" />
        <com.sports.unity.common.view.CustomRobotoRegularTextView
            android:id="@+id/yc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/assist"
            android:text="2"
            android:textSize="@dimen/font_size_small_medium"
            app:layout_widthPercent="14%" />
        <com.sports.unity.common.view.CustomRobotoRegularTextView
            android:id="@+id/rc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/yc"
            android:text="8"
            android:textSize="@dimen/font_size_small_medium"
            app:layout_widthPercent="14%" />
    </android.support.percent.PercentRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray3"></View>
</android.support.v7.widget.CardView>

