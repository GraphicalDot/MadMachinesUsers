<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray3"
    android:orientation="vertical"
    android:paddingLeft="@dimen/horizontal_padding_medium"
    android:paddingTop="@dimen/horizontal_padding_large">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleView"
        android:layout_width="@dimen/profile_thumb_image_large"
        android:layout_height="@dimen/profile_thumb_image_large"
        android:layout_gravity="center|start"
        android:src="@drawable/ic_user"
        app:civ_border_color="@color/gray1"
        app:civ_border_width="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/vertical_padding_small">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingBottom="@dimen/horizontal_padding_very_very_small"
            android:paddingTop="@dimen/horizontal_padding_very_very_small"
            android:text="Anupam Gupta"
            android:textColor="#000"
            android:textSize="@dimen/font_size_small_large"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/vertical_padding_very_very_small"
            android:maxLines="1"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="@dimen/vertical_padding_very_very_small"
                android:text="Member of 0 groups"
                android:textColor="@color/dot_color_grey"
                android:textSize="@dimen/font_size_very_small"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/dot_circle" />


            <TextView
                android:id="@+id/admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/vertical_padding_very_very_small"
                android:text="Admin of 0 groups"
                android:textColor="@color/dot_color_grey"
                android:textSize="@dimen/font_size_very_small"
                android:textStyle="normal" />

            />
        </LinearLayout>

        <Switch
            android:id="@+id/share_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/horizontal_padding_small"
            android:paddingRight="@dimen/horizontal_padding_small"
            android:paddingTop="@dimen/horizontal_padding_very_very_small"
            android:text="Share my Location"
            android:textColor="@color/gray1" />

    </LinearLayout>
</LinearLayout>