<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:background="@color/ColorPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/vertical_padding_very_very_small"
    card_view:cardCornerRadius="@dimen/card_edge_curve_radius">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/ll_player_img"
            android:layout_width="wrap_content"
            android:padding="@dimen/horizontal_padding_very_small"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_user"/>
            <ImageView
                android:layout_marginLeft="24dp"
                android:layout_alignBottom="@id/iv_player"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_ph_no_logo"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_toRightOf="@id/ll_player_img"
            android:id="@+id/ll_notification_info"
            android:layout_width="match_parent"
            android:padding="@dimen/horizontal_padding_very_small"
            android:layout_height="wrap_content">
            <com.sports.unity.common.view.CustomRobotoMediumTextView
                android:id="@+id/tv_notification_subject"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content"
                android:text="Payer Name"/>
            <com.sports.unity.common.view.CustomRobotoCondenseRegularTextView
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:text="201"/>
            <com.sports.unity.common.view.CustomRobotoCondenseRegularTextView
                android:layout_below="@id/tv_notification_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="india won by 10 wicket"/>
        </RelativeLayout>
        <View
            android:id="@+id/iv_separator"
            android:layout_toRightOf="@id/ll_player_img"
            android:layout_marginLeft="@dimen/horizontal_padding_very_small"
            android:layout_below="@id/ll_notification_info"
            android:layout_height="1dp"
            android:background="@color/gray3"
            android:layout_width="match_parent"></View>
        <android.support.percent.PercentRelativeLayout
            android:padding="@dimen/horizontal_padding_very_small"
            android:layout_toRightOf="@id/ll_player_img"
            android:layout_below="@id/iv_separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_notification_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:layout_widthPercent="10%"
                android:src="@drawable/ic_goal_blue"/>
            <com.sports.unity.common.view.CustomRobotoRegularTextView
                android:id="@+id/tv_notification_labale"
                card_view:layout_widthPercent="35%"
                android:paddingLeft="@dimen/vertical_padding_very_very_small"
                android:layout_toRightOf="@id/iv_notification_icon"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:text="SHARE"/>
            <ImageView
                card_view:layout_widthPercent="10%"
                android:layout_toRightOf="@id/tv_notification_labale"
                android:id="@+id/iv_notification_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_notification_enable"/>
            <com.sports.unity.common.view.CustomRobotoRegularTextView
                card_view:layout_widthPercent="45%"
                android:paddingLeft="@dimen/vertical_padding_very_very_small"
                android:layout_toRightOf="@id/iv_notification_state"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:text="MUTE ALERT"/>
        </android.support.percent.PercentRelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>