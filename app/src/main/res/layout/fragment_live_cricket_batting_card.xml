<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ColorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/horizontal_padding_small"
        android:paddingRight="@dimen/horizontal_padding_small"
        android:paddingBottom="@dimen/horizontal_padding_very_very_small"
        android:paddingTop="@dimen/horizontal_padding_very_very_small">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_player_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_widthPercent="37%">
            <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                android:id="@+id/tv_player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/news_static"
                android:textSize="@dimen/font_size_small_medium"/>
            <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                android:id="@+id/tv_wicket_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/gray1"
                android:textSize="@dimen/font_size_very_very_small" />
        </LinearLayout>

        <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
            android:id="@+id/tv_player_run"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ll_player_score"
            android:gravity="right"
            android:textColor="@color/news_static"
            android:textSize="@dimen/font_size_small_medium"
            app:layout_widthPercent="10%" />

        <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
            android:id="@+id/tv_ball_play_by_player"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_player_run"
            android:gravity="right"
            android:textColor="@color/news_static"
            android:textSize="@dimen/font_size_small_medium"
            app:layout_widthPercent="13%" />

        <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
            android:id="@+id/tv_four_gain_by_player"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_ball_play_by_player"
            android:gravity="right"
            android:textColor="@color/news_static"
            android:textSize="@dimen/font_size_small_medium"
            app:layout_widthPercent="11%" />

        <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
            android:id="@+id/tv_six_gain_by_player"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_four_gain_by_player"
            android:gravity="right"
            android:textColor="@color/news_static"
            android:textSize="@dimen/font_size_small_medium"
            app:layout_widthPercent="11%" />

        <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
            android:id="@+id/tv_sr_rate_of_player"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_six_gain_by_player"
            android:gravity="right"
            android:textColor="@color/news_static"
            android:textSize="@dimen/font_size_small_medium"
            app:layout_widthPercent="18%" />
    </android.support.percent.PercentRelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray3"></View>
</LinearLayout>
