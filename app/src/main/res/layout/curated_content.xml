<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/curated_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ColorPrimary">

    <android.support.percent.PercentFrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_aspectRatio="178%"
        app:layout_widthPercent="100%">

        <ImageView
            android:id="@+id/curated_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_aspectRatio="178%"
            app:layout_widthPercent="100%" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:background="@drawable/img_news_heading_bg"
            app:layout_aspectRatio="178%"
            app:layout_heightPercent="55%"
            app:layout_widthPercent="100%" />
    </android.support.percent.PercentFrameLayout>

    <ImageView
        android:id="@+id/discuss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="@dimen/vertical_padding_large"
        android:layout_marginRight="@dimen/horizontal_padding_small"
        android:background="@drawable/news_discuss_drawable"
        android:elevation="@dimen/toolbar_elevation"
        android:padding="@dimen/horizontal_padding_very_small"
        android:src="@drawable/ic_discuss" />

    <ImageView
        android:id="@+id/flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/horizontal_padding_small"
        android:paddingTop="@dimen/vertical_padding_very_small"
        android:scaleType="center"
        android:src="@drawable/ic_su_news" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="@dimen/vertical_padding_very_small"
        android:layout_marginRight="@dimen/horizontal_padding_large"
        android:orientation="vertical">

        <com.sports.unity.common.view.CustomRobotoSlabRegularTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="3"
            android:maxLines="2"
            android:paddingLeft="@dimen/horizontal_padding_small"
            android:paddingRight="@dimen/horizontal_padding_large"
            android:text="There are many variations of passages of Lorem Ipsum available,
            but the majority have suffered alteration in some form"
            android:textColor="@color/ColorPrimary"
            android:textSize="@dimen/font_size_medium" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/horizontal_padding_small"
            android:paddingTop="@dimen/vertical_padding_very_very_small"
            android:layout_marginBottom="@dimen/vertical_padding_very_small">

            <com.sports.unity.common.view.CustomRobotoRegularTextView
                android:id="@+id/published"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/horizontal_padding_very_very_small"
                android:text="3 MIN AGO"
                android:textColor="@color/ColorPrimary"
                android:textSize="@dimen/horizontal_padding_very_small" />


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/news_vertical_strip" />

            <com.sports.unity.common.view.CustomRobotoRegularTextView
                android:id="@+id/sports_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_padding_very_very_small"
                android:background="@drawable/news_sports_drawable"
                android:paddingLeft="@dimen/horizontal_padding_very_very_small"
                android:paddingRight="@dimen/horizontal_padding_very_very_small"
                android:text="@string/cricket"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/horizontal_padding_very_small" />

        </LinearLayout>
    </LinearLayout>
</android.support.percent.PercentFrameLayout>