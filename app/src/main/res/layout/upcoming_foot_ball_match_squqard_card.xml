<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/horizontal_padding_very_small"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="wrap_content"
            card:layout_widthPercent="30%"
            android:layout_height="wrap_content">
            <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
                android:id="@+id/tv_player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/news_static"
                android:textSize="@dimen/font_size_small_medium"
                android:gravity="right"
                android:text=""
                />
            <com.sports.unity.common.view.CustomRobotoCondenseRegularTextView
                android:paddingLeft="@dimen/horizontal_padding_very_very_small"
                android:id="@+id/tv_player_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/news_static"
                android:textSize="@dimen/font_size_small_medium"
                android:text=""
                />
        </LinearLayout>

        <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
            android:id="@+id/tv_p"
            android:layout_toRightOf="@id/ll_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/news_static"
            android:textSize="@dimen/font_size_small_medium"
            card:layout_widthPercent="14%"
            android:text=""
            />
        <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
            android:id="@+id/tv_pl"
            android:layout_toRightOf="@id/tv_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/news_static"
            android:textSize="@dimen/font_size_small_medium"
            card:layout_widthPercent="14%"
            android:text=""
            />
        <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
            android:id="@+id/tv_gol"
            android:layout_toRightOf="@id/tv_pl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/news_static"
            android:textSize="@dimen/font_size_small_medium"
            card:layout_widthPercent="14%"
            android:text=""
            />
        <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
            android:layout_toRightOf="@id/tv_gol"
            android:id="@+id/tv_yellow_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/news_static"
            android:textSize="@dimen/font_size_small_medium"
            card:layout_widthPercent="14%"
            android:text=""
            />
        <com.sports.unity.common.view.CustomRobotoCondenseBoldTextView
            android:layout_toRightOf="@id/tv_yellow_card"
            android:id="@+id/tv_red_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/news_static"
            android:textSize="@dimen/font_size_small_medium"
            card:layout_widthPercent="14%"
            android:text=""
            />
    </android.support.percent.PercentRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray4"
        android:layout_height="1dp"></View>
</LinearLayout>