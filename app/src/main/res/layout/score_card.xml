<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:perc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/vertical_padding_very_very_small"
        card_view:cardCornerRadius="@dimen/card_edge_curve_radius">

        <LinearLayout
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ScoreLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.8"
                    android:layout_margin="@dimen/vertical_padding_very_very_small"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/horizontal_padding_very_small"
                        android:layout_marginLeft="@dimen/horizontal_padding_very_very_small"
                        android:layout_marginRight="@dimen/horizontal_padding_very_very_small"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/t1flag"
                            android:layout_marginLeft="@dimen/horizontal_padding_small"
                            android:layout_width="@dimen/flag_size_small"
                            android:layout_height="@dimen/flag_size_small"
                            android:src="@drawable/ic_no_img"
                            />

                        <android.support.percent.PercentRelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/team1"
                                perc:layout_widthPercent="65%"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:paddingLeft="@dimen/vertical_padding_very_small"
                                android:layout_centerVertical="true"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/font_size_small_large"
                                />
                            <LinearLayout
                                android:id="@+id/ll_first_score"
                                perc:layout_widthPercent="35%"
                                android:layout_width="0dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:paddingLeft="@dimen/vertical_padding_very_very_small"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/t1score"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:layout_gravity="right"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/font_size_small_large"
                                    />
                                <TextView
                                    android:layout_below="@id/t1score"
                                    android:id="@+id/t1over"
                                    android:layout_marginTop="@dimen/layout_minutes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:layout_gravity="right"
                                    android:textColor="@color/score_light_grey"
                                    android:textSize="@dimen/font_size_very_small"
                                    />
                            </LinearLayout>

                        </android.support.percent.PercentRelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:paddingTop="@dimen/horizontal_padding_very_small"
                        android:layout_marginLeft="@dimen/horizontal_padding_very_very_small"
                        android:layout_marginRight="@dimen/horizontal_padding_very_very_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/t2flag"
                            android:layout_marginLeft="@dimen/horizontal_padding_small"
                            android:layout_width="@dimen/flag_size_small"
                            android:layout_height="@dimen/flag_size_small"
                            android:src="@drawable/ic_no_img"
                            />

                        <android.support.percent.PercentRelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/team2"
                                perc:layout_widthPercent="65%"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:paddingLeft="@dimen/vertical_padding_very_small"
                                android:layout_centerVertical="true"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/font_size_small_large"
                                />
                            <LinearLayout
                                android:layout_alignParentRight="true"
                                android:id="@+id/ll_score_second"
                                perc:layout_widthPercent="35%"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/t2score"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:layout_gravity="right"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/font_size_small_large"
                                    />
                                <TextView
                                    android:id="@+id/t2over"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:layout_marginTop="@dimen/layout_minutes"
                                    android:layout_gravity="right"
                                    android:textColor="@color/score_light_grey"
                                    android:textSize="@dimen/font_size_very_small"
                                    />
                            </LinearLayout>

                        </android.support.percent.PercentRelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/gray3" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:paddingBottom="@dimen/horizontal_padding_very_very_small"
                    android:orientation="vertical"
                    >
                    <com.sports.unity.common.view.CustomRobotoRegularTextView
                        android:id="@+id/minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/green"
                        android:textSize="@dimen/font_size_small_large"
                        android:visibility="visible"
                        />
                    <com.sports.unity.common.view.CustomRobotoMediumTextView
                        android:id="@+id/ll_minutes"
                        android:layout_marginTop="@dimen/layout_minutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/font_size_very_very_small"
                        />
                    <com.sports.unity.common.view.CustomRobotoRegularTextView
                        android:id="@+id/liveText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/app_theme_blue"
                        android:textSize="@dimen/font_size_small_large"
                        />
                    <com.sports.unity.common.view.CustomRobotoMediumTextView
                        android:id="@+id/matchDay"
                        android:layout_marginBottom="@dimen/vertical_padding_very_very_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/font_size_very_small"
                        />

                    <com.sports.unity.common.view.CustomRobotoRegularTextView

                        android:id="@+id/show_odds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/horizontal_padding_very_very_small"
                        android:paddingRight="@dimen/horizontal_padding_very_very_small"
                        android:background="@drawable/round_edge_box_blue"
                        android:text="@string/show_odds"
                        android:textColor="@color/ColorPrimary"
                        android:textSize="@dimen/font_size_very_small"

                        />
                </LinearLayout>
            </LinearLayout>
            <android.support.percent.PercentRelativeLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray3"
                android:orientation="horizontal">
                <LinearLayout
                    perc:layout_widthPercent="85%"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/venue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/horizontal_padding_small"
                        android:layout_marginTop="@dimen/vertical_padding_very_very_small"
                        android:text="San Siro"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/score_dark_grey"
                        android:textSize="@dimen/font_size_very_small"
                        />
                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/vertical_padding_very_very_small"
                        android:layout_marginLeft="@dimen/horizontal_padding_small"
                        android:text="Friday, January 01, 00:00 (IST)"
                        android:textColor="@color/score_light_grey"
                        android:textSize="@dimen/font_size_very_small"
                        />
                </LinearLayout>
                <ImageView
                    android:id="@+id/notification"
                    perc:layout_widthPercent="10%"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_vertical_margin_small"
                    android:layout_marginTop="@dimen/activity_vertical_margin_small"
                    android:src="@drawable/ic_notification_disabled" />
            </android.support.percent.PercentRelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>