<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorPrimary"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.sports.unity.common.controller.UserProfileActivity">

    <LinearLayout
        android:id="@+id/layout_inning"
        android:layout_width="match_parent"
        android:background="@color/gray3"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/activity_vertical_margin_small"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/vertical_padding_small"
                android:textSize="@dimen/font_size_medium"
                android:layout_gravity="left"
                android:text="INDIA INNINGS "/>
            <ImageView
                android:id="@+id/iv_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:src="@drawable/ic_droable"/>
            <View
                android:layout_below="@+id/iv_down"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray3" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_batting"
        android:layout_width="match_parent"
        android:background="@color/gray4"
        android:layout_below="@+id/layout_inning"
        android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/vertical_padding_small"
                android:textSize="@dimen/font_size_medium"
                android:layout_weight=".5"
                android:text="NZ 30/8(50)"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_medium"
                android:layout_weight=".1"
                android:text="R"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_medium"
                android:layout_weight=".1"
                android:text="B"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_medium"
                android:layout_weight=".1"
                android:text="4.5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_medium"
                android:layout_weight=".1"
                android:text="6s"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_medium"
                android:layout_weight=".1"
                android:text="RS"/>

    </LinearLayout>

    </RelativeLayout>