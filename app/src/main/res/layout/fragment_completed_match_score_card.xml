<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorPrimary"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_inning"
        android:layout_width="match_parent"
        android:background="@color/gray3"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/horizontal_padding_very_small"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/activity_vertical_margin_small"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_first_team_inning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/vertical_padding_small"
                android:textSize="@dimen/font_size_medium"
                android:layout_gravity="left"
                android:text="INDIA INNINGS "/>
            <ImageView
                android:id="@+id/iv_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:src="@drawable/ic_droable"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/gray3"
        android:layout_marginTop="@dimen/activity_vertical_margin_small"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/activity_vertical_margin_small"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_Second_team_inning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/vertical_padding_small"
                android:textSize="@dimen/font_size_medium"
                android:layout_gravity="left"
                android:text="NZ "/>
            <ImageView
                android:id="@+id/iv_down_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:src="@drawable/ic_droable"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>