<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sports.unity" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".ChatScreenApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <receiver android:name=".messages.controller.activity.ChatScreenActivity$MessageRecieved" >
            <intent-filter>
                <action android:name="com.madmachines.SINGLE_MESSAGE_RECEIVED" />
            </intent-filter>
        </receiver>
        <receiver android:name=".messages.controller.fragment.ChatFragment$MessageRecieved" >
            <intent-filter>
                <action android:name="com.madmachine.SINGLE_MESSAGE_RECEIVED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".common.controller.SplashScreenActivity"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".common.controller.EnterOtpActivity"
            android:label="@string/title_activity_enter_otp" />
        <activity
            android:name=".common.controller.EnterPhoneActivity"
            android:label="@string/title_activity_enter_phone" />
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".ProfileCreationActivity"
            android:label="@string/title_activity_profile_creation" />
        <activity
            android:name=".common.controller.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".common.controller.SelectSportsActivity"
            android:label="@string/title_activity_select_sports" />
        <activity
            android:name=".messages.controller.activity.ChatScreenActivity"
            android:label="@string/title_activity_chat_screen" />
        <activity
            android:name=".messages.controller.activity.CreateGroup"
            android:label="@string/title_activity_create_group" >
        </activity>

        <service
            android:name=".XMPPManager.XMPPService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".news.controller.activity.NewsDetailsActivity"
            android:label="@string/title_activity_news_details" />
        <activity
            android:name=".common.controller.FilterActivity"
            android:label="@string/title_activity_filter" >
        </activity>
        <activity
            android:name=".common.controller.LeagueSelectActivity"
            android:label="@string/title_activity_filter" >
        </activity>
        <activity
            android:name=".common.controller.TourActivity"
            android:label="@string/title_activity_tour" >
        </activity>
        <activity
            android:name=".messages.controller.activity.CameraActivity"
            android:label="@string/title_activity_camera" >
        </activity>
    </application>

</manifest>
